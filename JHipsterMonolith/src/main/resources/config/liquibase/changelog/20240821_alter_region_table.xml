<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ChangeSet to rename the 'code' column to 'UNM49Code' -->
    <changeSet id="20240821-01" author="wahidin">
        <renameColumn 
            tableName="region" 
            oldColumnName="code" 
            newColumnName="UNM49Code" 
            columnDataType="varchar(255)"/>
    </changeSet>

    <!-- ChangeSet to add a new 'ISOAlpha2Code' column -->
    <changeSet id="20240821-02" author="wahidin">
        <addColumn tableName="region">
            <column name="ISOAlpha2Code" type="varchar(255)">
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
